<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr02_20172.lab4fcm.Vista.Loggin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="300px"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingTop="20dp">


                <EditText
                    android:id="@+id/txtUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_account"
                    android:hint="@string/strIngresar"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_pass"
                    android:hint="@string/strClave"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <Button
                    android:id="@+id/btnIngesar"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="@color/accent"
                    android:onClick="onClick"
                    android:text="@string/ingresar"
                    android:textColor="#ffffff"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPassword"
                    tools:layout_editor_absoluteX="41dp"></Button>

                <Button
                    android:id="@+id/txtRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="@color/primary"
                    android:onClick="onClick"
                    android:text="@string/registrame"
                    android:textColor="#ffffff"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnIngesar"
                    tools:layout_editor_absoluteX="41dp" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_button_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="3dp" />
                
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/login_button_google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="3dp">

                </com.google.android.gms.common.SignInButton>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarLoging"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>
