<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr02_20172.lab4fmc.Vista.Fragment.RegistroApartamento">

    <ScrollView
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:id="@+id/layout_imagenApartamento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_viewUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutComponentesDos"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtNombreInmueble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:hint="@string/nombreInmueble"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <AutoCompleteTextView
                    android:id="@+id/txtTipoInmueble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:drawablePadding="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:hint="@string/TipoInmueble"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text"
                    />


                <EditText
                    android:id="@+id/txtValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:hint="@string/valorInmueble"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <EditText
                    android:id="@+id/txtArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:hint="@string/areaInmueble"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <EditText
                    android:id="@+id/txtCuartos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:hint="@string/numeroCuartos"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <EditText
                    android:id="@+id/txtUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:hint="@string/UbicacionInmueble"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <EditText
                    android:id="@+id/txtDescripcionApartamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="#ffffff"
                    android:hint="@string/DescripcionApartamento"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="15dp"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

            </LinearLayout>

            <Button
                android:id="@+id/btnRegistrarApartamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/accent"
                android:onClick="onClick"
                android:text="@string/registrar"
                android:textColor="#ffffff"
                android:background="@drawable/corner_input"/>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/accent"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:src="@drawable/ic_add_a_photo"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>