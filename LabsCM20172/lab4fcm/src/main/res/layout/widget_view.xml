<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dip"
    android:background="@drawable/widgetshape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_Photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/widget_nombre"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/thumbnail"
        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"
        android:paddingTop="@dimen/card_title_padding"
        android:textColor="@color/primary_text"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/widget_tipo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_nombre"
        android:textColor="@color/primary_text"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"
        android:textSize="@dimen/songs_count" />

    <TextView
        android:id="@+id/widget_valor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_tipo"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"
        android:textSize="@dimen/songs_count" />

    <TextView
        android:id="@+id/widget_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_valor"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"
        android:textSize="@dimen/songs_count" />

    <TextView
        android:id="@+id/widget_descripcion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_area"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"
        android:textSize="@dimen/songs_count" />


</LinearLayout>